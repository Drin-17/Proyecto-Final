@model List<Proyecto_Final.Models.Airbnb.AirbnbTrack>


<!DOCTYPE html>
<html>
<head>
    <title>Airbnb</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url(https://picsum.photos/seed/picsum/1000/500);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            color: black;
        }
    </style>
  
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <div class="navbar-brand ml-auto">Hecho por: Gloria Guartacho</div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="https://www.facebook.com/gloria.gtenesaca" target="_blank">Facebook</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://hojadevidagloria.000webhostapp.com/" target="_blank">Hoja de Vida</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <div class="container mt-5">
        <h2 class="mb-4">Airbnb</h2> 
        <form method="get" action="@Url.Action("Information", "Airbnb")" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <label for="location" class="form-label">Pais:</label>
                    <input type="text" name="location" class="form-control" required />
                </div>
                <div class="col-md-2">
                    <label for="checkin" class="form-label">Check-In:</label>
                    <input type="date" name="checkin" class="form-control" required />
                </div>
                <div class="col-md-2">
                    <label for="checkout" class="form-label">Check-Out:</label>
                    <input type="date" name="checkout" class="form-control" required />
                </div>
                <div class="col-md-2">
                    <label for="adults" class="form-label">Adultos:</label>
                    <input type="number" name="adults" class="form-control" required />
                </div>
                <div class="col-md-2 align-self-end">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>

        @if (Model != null && Model.Any())
        {
            <h3 class="mt-4">Resultados de la búsqueda:</h3>
            <div class="row">
                @foreach (var location in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <img src="@location.Images.FirstOrDefault()" class="card-img-top" alt="Imagen de la propiedad">
                            <div class="card-body">
                                <h5 class="card-title">@location.name</h5>
                                <p class="card-text">@location.Address</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">ID: @location.ID</li>
                                    <li class="list-group-item">Baños: @location.Bathrooms</li>
                                    <li class="list-group-item">Habitaciones: @location.Bedrooms</li>
                                    <li class="list-group-item">URL: <a href="@location.Url" target="_blank">@location.Url</a></li>
                                    <li class="list-group-item">Tarifa: @location.Rate</li>
                                    <li class="list-group-item">Tipo: @location.Title</li>
                                    <li class="list-group-item">Monto por Noche: @location.Amount</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="mt-4">No se encontraron resultados.</p>
        }
    </div>
   
   

</body>
</html>