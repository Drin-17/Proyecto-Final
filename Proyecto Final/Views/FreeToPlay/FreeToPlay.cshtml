    <body>
        <!-- Menú de categorías en forma de tarjeta -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card category-card">
                        <div class="card-body">
                            
                            <form class="category-form" asp-controller="FreeToPlay" asp-action="FreeToPlay" method="get">
                                <label class="category-label" for="categoria">SELECCIONA UNA CATEGORIA:</label>
                                <select class="category-select" name="categoria" id="categoria">

                                    <option value="Fighting">Fighting</option>
                                    <option value="Mmo">MMO</option>
                                    <option value="Mmorpg">MMORPG</option>
                                    <option value="Moba">MOBA</option>
                                    <option value="Shooter">Shooter</option>
                                    <option value="Strategy">Strategy</option>
                                </select>
                                <button class="black-button" type="submit">BUSCAR</button>

            

                            </form>
                            <p class="current-category">Categoría actual: @ViewBag.Categoria</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enlace a Bootstrap JS (opcional, dependiendo de las funcionalidades que desees utilizar) -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
    <div class="container">
        <div class="row">
            @foreach (var juego in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header" style="background-color: #343a40;">
                            <!-- Encabezado de tarjeta gris oscuro -->
                        @juego.Title
                        </div>
                        <div class="card-body">
                            <img src="@juego.Thumbnail" class="card-img-top" alt="Miniatura del Juego">
                            <h5 class="card-title">@juego.ShortDescription</h5>
                            <p class="card-text">
                                <strong>Género:</strong> @juego.Genre<br>
                                <strong>Plataforma:</strong> @juego.Platform<br>
                                <strong>Editor:</strong> @juego.Publisher<br>
                                <strong>Desarrollador:</strong> @juego.Developer<br>
                                <strong>Fecha de Lanzamiento:</strong> @juego.ReleaseDate<br>
                            </p>
                            <a href="@juego.GameUrl" class="btn btn-primary" target="_blank" style="background-color: #343a40;">Jugar Ahora</a>
                            <a href="@juego.FreetogameProfileUrl" class="btn btn-secondary" target="_blank">Perfil FreeToGame</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enlace a Bootstrap JS (opcional, dependiendo de las funcionalidades que desees utilizar) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>